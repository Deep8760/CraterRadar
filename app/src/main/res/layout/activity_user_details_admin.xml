<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminSide.UserDetailsAdmin"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic_userDetails_admin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/SecondaryFontcolor"
            android:src="@drawable/user_2"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/userId_detail_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User ID"
            android:textSize="18sp"
            android:textColor="@color/AppPrimary"
            android:textColorHint="@color/AppPrimary"
            android:background="@drawable/round_edittext"
            android:layout_marginTop="20dp"

            android:padding="10dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/userName_detail_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:textSize="18sp"
            android:textColor="@color/AppPrimary"
            android:textColorHint="@color/AppPrimary"
            android:background="@drawable/round_edittext"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/userEmail_detail_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Email"
            android:textSize="18sp"
            android:textColor="@color/AppPrimary"
            android:textColorHint="@color/AppPrimary"
            android:background="@drawable/round_edittext"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/userPhone_details_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Phone"
            android:textSize="18sp"
            android:textColor="@color/AppPrimary"
            android:textColorHint="@color/AppPrimary"
            android:background="@drawable/round_edittext"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/userPassword_details_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Password"
            android:textSize="18sp"
            android:textColor="@color/AppPrimary"
            android:textColorHint="@color/AppPrimary"
            android:background="@drawable/round_edittext"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textAlignment="center"/>


    </LinearLayout>
    <ProgressBar
        android:id="@+id/userDetails_progress_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:minWidth="60dp"
        android:minHeight="60dp"
        android:background="@color/AppPrimary"
        android:visibility="gone"
        android:progressBackgroundTint="@color/AppSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>