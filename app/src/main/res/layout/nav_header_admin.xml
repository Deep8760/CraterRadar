<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/admin_drawer_bg"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/SecondaryFontcolor"
        android:alpha="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/admin_profile_photo_bg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/l1" />
    <ImageView
        android:id="@+id/admin_profile_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user_2"
        app:layout_constraintStart_toStartOf="@+id/admin_profile_photo_bg"
        app:layout_constraintEnd_toEndOf="@+id/admin_profile_photo_bg"
        app:layout_constraintTop_toTopOf="@+id/admin_profile_photo_bg"
        app:layout_constraintBottom_toBottomOf="@+id/admin_profile_photo_bg" />
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/admin_profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/admin_name_nav_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/lucidagrande"
            android:textSize="18sp"
            android:hint="ADMIN NAME"
            android:layout_weight="1"
            android:textColor="@color/PrimaryFontColor"
            android:textColorHint="@color/PrimaryFontColor"/>
        <TextView
            android:id="@+id/admin_email_nav_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/lucidagrande"
            android:textSize="18sp"
            android:hint="ADMIN EMAIL"
            android:layout_weight="1"
            android:textColor="@color/PrimaryFontColor"
            android:textColorHint="@color/PrimaryFontColor"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>